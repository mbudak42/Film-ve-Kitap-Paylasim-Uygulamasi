@model CineTrack.MvcUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Giriş Yap</h2>
                
                <form method="post" asp-action="Login" asp-controller="Auth">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-Posta</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                    </div>
                    
                    <button type="submit" class="btn btn-success w-100">Giriş Yap</button>
                </form>
                
                <p class="text-center mt-3">
                    Hesabın yok mu? <a asp-action="Register" asp-controller="Auth">Kayıt Ol</a>
                </p>
            </div>
        </div>
    </div>
</div>