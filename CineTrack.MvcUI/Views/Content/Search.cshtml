@model List<dynamic>

<form method="get">
	<input type="text" name="q" placeholder="Film veya kitap ara..." />
	<select name="type">
		<option value="movie">Film</option>
		<option value="book">Kitap</option>
	</select>
	<button type="submit">Ara</button>
</form>

@if (Model != null)
{
	@foreach (var item in Model)
	{
		<div class="content">
			<img src="@item.coverUrl" width="100" />
			<span>@item.title</span>
			<a href="/Content/Detail?type=@item.contentType&id=@item.id">Detay</a>
		</div>
	}
}
